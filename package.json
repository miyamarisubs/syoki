{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "cross-env FORCE_COLOR=1 lerna run build --stream",
        "build-ci": "lerna run build-ci --stream",
        "watch": "cross-env FORCE_COLOR=1 concurrently --names lerna,tests --prefix-colors blue,green \"lerna run watch --parallel\" \"jest --watch\"",
        "lint": "lerna run lint --stream && precise-commits --check-only",
        "fix": "lerna run fix && prettier --write \"./**/*.{js,jsx,ts,tsx,yaml,yml,css,less,sass,scss,pcss}\"",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.1",
        "@babel/plugin-transform-runtime": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-typescript": "^7.0.0",
        "@commitlint/cli": "^7.1.2",
        "@commitlint/config-conventional": "^7.1.2",
        "@commitlint/config-lerna-scopes": "^7.1.2",
        "@types/jest": "^23.3.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "concurrently": "^4.0.1",
        "cross-env": "^5.2.0",
        "husky": "^1.0.0-rc.14",
        "jest": "^23.6.0",
        "lerna": "^3.4.0",
        "mkdirp": "^0.5.1",
        "precise-commits": "^1.0.2",
        "prettier": "^1.14.2",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-language-service": "^0.9.9",
        "tslint-microsoft-contrib": "^5.2.1",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "^3.0.3"
    }
}
